---
import SchemaData from "@components/SchemaData.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="title" content="Pyrus" />
    <meta name="author" content="Titanium Network" />
    <meta name="description" content="Pyrus is a sleek web proxy supporting multiple standards of communication, and wide levels of customization." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://aluu.xyz" />
    <meta property="og:title" content="Pyrus" />
    <meta property="og:description" content="Pyrus is a sleek web proxy supporting multiple standards of communication, and wide levels of customization." />
    <meta property="og:image" content="/logo.png" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://aluu.xyz" />
    <meta property="twitter:title" content="Pyrus" />
    <meta property="twitter:description" content="Pyrus is a sleek web proxy supporting multiple standards of communication, and wide levels of customization." />
    <meta property="twitter:image" content="/logo.png" />
    <script src="@components/ts/PyrusStore.ts"></script>
    <script src="https://www.googletagmanager.com/gtag/js?id=G-P1JX4G9KSF" is:inline></script>
    <SchemaData />
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        window.dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-P1JX4G9KSF");
    </script>
    <script>
      import instantiatePyrus from "@components/ts/Pyrus";
      instantiatePyrus();
      const lang = Pyrus.store.get("lang");
      const redirect = (loc: string) => (window.location.href = loc);
      if (lang) {
        redirect(`/${lang.value}/`);
      } else {
        const lang = navigator.language;
        if (lang.includes("ja")) {
          Pyrus.store.set("lang", { value: "jp" });
          redirect("/jp/");
        } else if (lang.includes("es")) {
          Pyrus.store.set("lang", { value: "fr" });
          redirect("/fr/");
        } else if (lang.includes("fr")) {
          Pyrus.store.set("lang", { value: "es" });
          redirect("/es/");
        } else if (lang.includes("pt")) {
          Pyrus.store.set("lang", { value: "pt" });
          redirect("/pt/");
        } else if (lang.includes("ru")) {
          Pyrus.store.set("lang", { value: "ru" });
          redirect("/ru/");
        } else if (lang.includes("zh")) {
          Pyrus.store.set("lang", { value: "zh" });
          redirect("/zh/");
        } else {
          Pyrus.store.set("lang", { value: "en" });
          redirect("/en/");
        }
      }
    </script>
  </head>
  <body style="background-color: black;"> </body>
</html>
